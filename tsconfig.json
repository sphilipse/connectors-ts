{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "commonjs",
    "outDir": "target",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowJs": true,
  },
  "exclude": ["target"],
  "include": ["src/**/*"],
  "baseUrl": "./src",
  "rootDir": "./src"
}
